<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- API Config List View -->
        <record id="view_api_config_tree" model="ir.ui.view">
            <field name="name">api.config.list</field>
            <field name="model">api.config</field>
            <field name="arch" type="xml">
                <list string="API Configurations">
                    <field name="name"/>
                    <field name="api_key" widget="text" optional="show"/>
                    <field name="active"/>
                    <field name="usage_count"/>
                    <field name="last_used"/>
                </list>
            </field>
        </record>

        <!-- API Config Form View -->
        <record id="view_api_config_form" model="ir.ui.view">
            <field name="name">api.config.form</field>
            <field name="model">api.config</field>
            <field name="arch" type="xml">
                <form string="API Configuration">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="created_date" readonly="1"/>
                                <field name="last_used" readonly="1"/>
                                <field name="usage_count" readonly="1"/>
                            </group>
                        </group>
                        <group>
                            <field name="api_key" readonly="1" widget="text" 
                                   help="API Key for authentication. Copy this key and use it in your API requests."/>
                            <button name="regenerate_key" string="Regenerate Key" type="object" class="btn-primary"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Description of this API configuration..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- API Config Action -->
        <record id="action_api_config" model="ir.actions.act_window">
            <field name="name">API Configurations</field>
            <field name="res_model">api.config</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first API configuration
                </p>
                <p>
                    Configure API keys for accessing the REST API endpoints.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_api_config"
                  name="API Configuration"
                  parent="base.menu_administration"
                  action="action_api_config"
                  sequence="100"/>
    </data>
</odoo>

